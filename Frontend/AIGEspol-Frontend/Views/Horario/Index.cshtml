        </div>
    </div>
</div>

<table class="table table-bordered" hidden id="tblPersons">
    <thead>
        <tr>
            <th class="text-center">
                Seleccionar:
            </th>
            <th class="text-center">
                Nombres y apellidos:
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><input type="checkbox" name="persons" id="1" /></td>
            <td>Irene Córdova</td>
        </tr>
        <tr>
            <td><input type="checkbox" name="persons" id="2" /></td>
            <td>Jamileth Córdova</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary btm-sm m-2" data-toggle="modal" data-target="#modalCreateList" style="float: right; font-size: 0.9em; margin-right: 15px;"><i class="fa fa-search" aria-hidden="true"></i>GUARDAR LISTA</a>
<a class="btn btn-primary btm-sm m-2" style="float: right; font-size: 0.9em; margin-right: 15px;"><i class="fa fa-search" aria-hidden="true"></i>GENERAR HORARIO</a>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="modalCreateList" tabindex="-1" role="dialog" aria-labelledby="emodalCreateListTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="text-align: center;">
            <div class="modal-body">
                <h5 class="modal-title" id="modalCreateListTitle">Guardar lista</h5>
                <div class="row">
                    <input id="name" name="name" type="text" class="form-control" placeholder="NOMBRE DE LA LISTA">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button onclick="submit()" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var columnList = [{
                "targets": 0,
                "searchable": false,
                "orderable": false,
                "className": "dt-body-center"
            }];

            tblPersons = initializeSimpleTable('#tblPersons', 10, columnList, 1, 'desc');
            $("#tblPersons").attr("hidden", false)

        });

        function submit() {
            let persons = []
            $('input[name=persons]').each(function () {
                if ($(this)[0].checked) {
                    id = $(this).attr('id');
                    persons.push(new Number(id))
                }
            });

            var data = {
                name: $('#name').val(),
                idOwner: 1,
                idPersons: persons
            };

            $.post("/Lista/Create", { lista: data }, function () { alert('Successfully Saved') });
        }


    </script>

}
